<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coma.go">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Misc.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".Web.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Web.MyFirebaseInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".View.LoginActivity"
            android:label="Вход">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.MainActivity"
            android:label="События"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.EventActivity"
            android:label="Событие"
            />
        <activity android:name=".View.ChatActivity"
            android:label="Чат"/>
        <activity android:name=".View.User.NewEventActivity"
            android:label="Новое сбытие"/>
        <activity android:name=".View.User.MyEventActivity"
            android:label="Мои события"/>
        <activity android:name=".View.User.CreatedEventActivity"
            android:label="Созданные мной события"/>
        <activity
            android:name=".View.User.MyProfileActivity"
            android:label="Мой профиль" />
        <activity android:name=".View.DialogsActivity"
            android:label="Диалоги"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".View.UserProfileActivity"
            android:label="Профиль"/>
        <activity android:name=".View.User.OptionsActivity"
            android:label="Настройки"></activity>
    </application>

</manifest>